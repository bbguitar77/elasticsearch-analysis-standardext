{
    "index":{
        "analysis":{
            "analyzer" : {
                "test_standard_ext" : {
                   "type":"custom",
                   "char_filter":["quotes"],
                   "tokenizer": "my_standard_ext_tokenizer",
                   "filter":["lowercase", "stop"]
                }            
            },
            "analyzer" : {
                "test_standard" : {
                   "type":"custom",
                   "char_filter":["quotes"],
                   "tokenizer": "standard",
                   "filter":["lowercase", "stop"]
                }            
            },
            "char_filter": {
          		"quotes": {
            		"type": "mapping",
            		"mappings": [ 
              			"\\u0091=>\\u0027",
              			"\\u0092=>\\u0027",
              			"\\u2018=>\\u0027",
              			"\\u2019=>\\u0027",
              			"\\u201B=>\\u0027"
            		]
          		}
        	},
        	"tokenizer": {
        		"my_standard_ext_tokenizer": {
        			"type": "standard_ext",
        			"mappings": [ 
              			"@=>EXNL",
              			"#=>EXNL",
              			"+=>EXNL",
              			"-=>EXNL"
            		]
        		}
        	}
        }
    }
}